+async function callRateLimitRpc({
+  supabase,
+  rateKey,
+  bucket,
+  limit,
+  windowSeconds,
+  increment,
+  reset
+}: {
+  supabase: SupabaseClient;
+  rateKey: string;
+  bucket: string;
+  limit: number;
+  windowSeconds: number;
+  increment: number;
+  reset: boolean;

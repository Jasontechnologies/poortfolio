+    setIsLoading(true);
+    try {
+      const response = await fetch(`/chat/conversation?page=${nextPage}&pageSize=${pageSize}`, {
+        cache: 'no-store'
+      });
+      const payload = (await response.json()) as {
+        error?: string;
+        conversation?: Conversation | null;
+        messages?: Message[];
+        pagination?: { page: number; total: number };

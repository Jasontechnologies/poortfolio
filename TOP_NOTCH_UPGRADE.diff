+        if (post.status === 'scheduled' && post.publish_at) {
+          return new Date(post.publish_at).getTime() <= Date.now();
+        }
+        return false;
+      }).length,
+    [posts]
+  );
+
+  const scheduledCount = useMemo(
+    () => posts.filter((post) => post.status === 'scheduled').length,
+    [posts]
+  );
+
+  const categoryById = useMemo(() => {

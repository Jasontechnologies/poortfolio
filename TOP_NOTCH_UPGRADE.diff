+                  Prev
+                </button>
+                <span className="text-xs text-black/65">
+                  {page}/{totalPages}
+                </span>
+                <button
+                  type="button"
+                  className="btn-subtle"
+                  disabled={page >= totalPages || isLoading}
+                  onClick={() => void loadConversation(page + 1)}
+                >
+                  Next
+                </button>
+              </div>
+            </>
+          )}
+        </div>
+
+        <form id="support-chat-form" onSubmit={onSubmit} className="mt-6 space-y-3">

+        error?: string;
+        flags?: FlagRow[];
+      };
+
+      if (!response.ok) {
+        setStatus(payload.error ?? 'Unable to load feature flags.');
+        return;
+      }
+
+      const rows = payload.flags ?? [];
+      rows.sort((a, b) => orderedKeys.indexOf(a.key) - orderedKeys.indexOf(b.key));
+      setFlags(rows);
